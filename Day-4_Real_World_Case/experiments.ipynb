import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from scipy import stats


# ---------------------------------------------------------
# Step 1 — Generate Data (Simulating real users)
# ---------------------------------------------------------

np.random.seed(42)

group_A = np.random.normal(8, 1.5, 100)   # Old design
group_B = np.random.normal(8.5, 1.5, 100) # New design

df = pd.DataFrame({
    "Time_Spent": np.concatenate([group_A, group_B]),
    "Design": ["Old"] * 100 + ["New"] * 100
})


# ---------------------------------------------------------
# Step 2 — Descriptive Statistics
# ---------------------------------------------------------

print("Descriptive Statistics:")
print(df.groupby("Design")["Time_Spent"].mean())


# ---------------------------------------------------------
# Step 3 — Visualization
# ---------------------------------------------------------

plt.hist(group_A, bins=20, alpha=0.6, label="Old Design")
plt.hist(group_B, bins=20, alpha=0.6, label="New Design")
plt.xlabel("Time Spent (minutes)")
plt.ylabel("Frequency")
plt.title("User Time Spent by Design")
plt.legend()
plt.show()


# ---------------------------------------------------------
# Step 4 — Hypothesis Testing (Two-Sample t-test)
# ---------------------------------------------------------

t_stat, p_value = stats.ttest_ind(group_A, group_B)

print("\nTwo-Sample t-test")
print("t-statistic:", t_stat)
print("p-value:", p_value)


# ---------------------------------------------------------
# Step 5 — Decision
# ---------------------------------------------------------

if p_value <= 0.05:
    print("Result: Statistically significant → Reject H0")
    print("Conclusion: New design impacts user time.")
else:
    print("Result: Not statistically significant → Fail to reject H0")
    print("Conclusion: No strong evidence of improvement.")
