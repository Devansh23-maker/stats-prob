# Combined Experiments (1–6)
# =========================================================

import numpy as np
import pandas as pd
import matplotlib.pyplot as plt


# ---------------------------------------------------------
# Experiment 1 — Mean, Variance, Standard Deviation
# ---------------------------------------------------------

data = np.random.normal(100, 20, 1000)

print("Experiment 1")
print("Mean:", np.mean(data))
print("Variance:", np.var(data))
print("Standard Deviation:", np.std(data))

# Mean → center of data
# Std → volatility / spread


# ---------------------------------------------------------
# Experiment 2 — Distribution Visualization
# ---------------------------------------------------------

plt.hist(data, bins=30)
plt.title("Distribution of Data")
plt.xlabel("Value")
plt.ylabel("Frequency")
plt.show()

# Visualizing spread is better than relying only on numbers


# ---------------------------------------------------------
# Experiment 3 — Correlation Analysis
# ---------------------------------------------------------

x = np.random.normal(50, 10, 1000)
y = x * 0.7 + np.random.normal(0, 5, 1000)

df = pd.DataFrame({
    "X": x,
    "Y": y
})

print("\nExperiment 3 — Correlation Matrix")
print(df.corr())

# Correlation shows association
# Correlation does NOT imply causation


# ---------------------------------------------------------
# Experiment 4 — Lag Analysis (Delayed Effect)
# ---------------------------------------------------------

df["Y_lag2"] = df["Y"].shift(2)

print("\nExperiment 4 — Lagged Correlation")
print(df[["X", "Y_lag2"]].corr())

# Real-world effects often appear after a time delay


# ---------------------------------------------------------
# Experiment 5 — Rolling Average (Trend Detection)
# ---------------------------------------------------------

series = pd.Series(np.random.normal(0, 1, 100).cumsum())
rolling_mean = series.rolling(5).mean()

plt.plot(series, label="Original Series")
plt.plot(rolling_mean, label="Rolling Mean")
plt.legend()
plt.title("Rolling Average Trend")
plt.show()

# Rolling averages smooth noise and reveal long-term trends


# ---------------------------------------------------------
# Experiment 6 — Z-Score & Outlier Detection
# ---------------------------------------------------------

z_scores = (data - np.mean(data)) / np.std(data)
outliers = data[np.abs(z_scores) > 2]

print("\nExperiment 6 — Outlier Detection")
print("Number of outliers:", len(outliers))

# Z-score helps detect anomalies and shocks
