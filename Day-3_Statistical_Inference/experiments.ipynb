import numpy as np
import pandas as pd
from scipy import stats


# ---------------------------------------------------------
# Experiment 1 — Sampling & Sample Mean
# ---------------------------------------------------------

population = np.random.normal(70, 10, 10000)
sample = np.random.choice(population, size=100)

print("Population Mean:", np.mean(population))
print("Sample Mean:", np.mean(sample))

# Sample mean approximates population mean


# ---------------------------------------------------------
# Experiment 2 — One-Sample t-test
# ---------------------------------------------------------

# H0: mean = 70
t_stat, p_value = stats.ttest_1samp(sample, 70)

print("\nOne-Sample t-test")
print("t-statistic:", t_stat)
print("p-value:", p_value)

# If p <= 0.05 → reject null hypothesis


# ---------------------------------------------------------
# Experiment 3 — Confidence Interval
# ---------------------------------------------------------

confidence_level = 0.95
mean = np.mean(sample)
std = np.std(sample, ddof=1)
n = len(sample)

margin = stats.t.ppf((1 + confidence_level) / 2, n-1) * (std / np.sqrt(n))
ci = (mean - margin, mean + margin)

print("\n95% Confidence Interval:", ci)


# ---------------------------------------------------------
# Experiment 4 — Two-Sample t-test
# ---------------------------------------------------------

group_A = np.random.normal(70, 10, 100)
group_B = np.random.normal(74, 10, 100)

t_stat, p_value = stats.ttest_ind(group_A, group_B)

print("\nTwo-Sample t-test")
print("p-value:", p_value)

# Tests whether two group means differ significantly
