import numpy as np
import matplotlib.pyplot as plt

# 1) Simulate dice rolls
dice = np.random.randint(1, 7, size=10000)

# Plot dice distribution
plt.hist(dice, bins=6, edgecolor='black')
plt.title("Dice Roll Distribution")
plt.xlabel("Dice Value")
plt.ylabel("Frequency")
plt.show()

# Print mean & std
print("Dice Mean:", np.mean(dice))
print("Dice Standard Deviation:", np.std(dice))


# 2) Simulate coin toss
coin = np.random.choice(["H", "T"], size=10000)

# Count heads and tails
unique, counts = np.unique(coin, return_counts=True)
print(dict(zip(unique, counts)))


# 3) Normal distribution

normal_data = np.random.normal(50, 10, 10000)

plt.hist(normal_data, bins=30)
plt.title("Normal Distribution (Mean=50, Std=10)")
plt.show()

print("Normal Mean:", np.mean(normal_data))
print("Normal Std:", np.std(normal_data))
